extends layout 
block content 
    main(class="mt-8 md:mt-36 px-6 md:px-0 md:max-w-sm lg:max-w-4xl mx-auto text-gray-800") 
        h1(class="font-semibold text-2xl lg:text-4xl") Create new blog post
        form(action="/new-post", method="post" class="grid gap-4 shadow p-4 md:p-6 lg:p-8 bg-gray-50 rounded-md mt-8")
            div 
                label(for="title") Title 
                input(type="text", name="title" id="title" class="w-full block px-4 py-2 rounded-md mt-2 focus:outline-none focus:border-none focus:ring-2 focus:ring-orange-500 transition ease-in-out duration-300") 

            div
                label(for="content") Content 
                textarea(name="content" id="content" class="w-full block px-4 py-2 rounded-md mt-2 focus:outline-none focus:border-none focus:ring-2 focus:ring-orange-500 transition ease-in-out duration-300")

            div
                label(for="image") Image poster 
                input(type="text", name="image" id="image" placeholder="https://imageurl.com" class="w-full block px-4 py-2 rounded-md mt-2 focus:outline-none focus:border-none focus:ring-2 focus:ring-orange-500 transition ease-in-out duration-300")

            div
                label(for="author-name") Author name 
                input(type="text", name="author-name" id="author-name" class="w-full block px-4 py-2 rounded-md mt-2 focus:outline-none focus:border-none focus:ring-2 focus:ring-orange-500 transition ease-in-out duration-300")

            div
                label(for="author-image") Author image 
                input(type="text", name="author-image" id="author-image" placeholder="https://imageurl.com" class="w-full block px-4 py-2 rounded-md mt-2 focus:outline-none focus:border-none focus:ring-2 focus:ring-orange-500 transition ease-in-out duration-300")

            button(type="submit" class="bg-green-700 hover:bg-green-500 transition ease-in-out duration-300 px-6 py-3 rounded-lg text-white focus:outline-none focus:border-none focus:ring-2 focus:ring-orange-500 active:scale-[.97]") Create post     